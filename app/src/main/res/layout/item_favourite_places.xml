<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/haf_trans3"
    android:layout_margin="@dimen/_16sdp"
    android:elevation="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_32sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/haf_trans3"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/armata"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="@string/address"
            android:textColor="@color/text_white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/armata"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="@string/address"
            android:textColor="@color/text_white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toTopOf="@id/text_view_discription"
            app:layout_constraintEnd_toEndOf="@id/text_view_address"
            app:layout_constraintStart_toStartOf="@id/text_view_address"
            app:layout_constraintTop_toBottomOf="@id/text_view_address" />

        <TextView
            android:id="@+id/text_view_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_16sdp"
            android:fontFamily="@font/armata"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="@string/address"
            android:textColor="@color/text_white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/text_view_address"
            app:layout_constraintStart_toStartOf="@id/text_view_address"
            app:layout_constraintTop_toBottomOf="@id/text_view_temperature" />

        <ImageView
            android:id="@+id/image_weather"
            android:contentDescription="@string/image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:src="@drawable/fav_places"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/verticalBarrier"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_delete"
            android:contentDescription="@string/image"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:src="@drawable/delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/verticalBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="text_view_address, text_view_discription
,text_view_temperature" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="0dp"
            android:background="@color/text_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/verticalBarrier"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>